{
    "compilerOptions": {
        "sourceMap": true,
        "experimentalDecorators": true,
        "module": "amd",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "target": "es6",
        "rootDir": "src/",
        "outDir": "dist/",
        "jsx": "react",
        "lib": [
          "es5",
          "es6",
          "dom",
          "es2015.promise",
          "es2019"
        ],
        "types": [
            "react",
            "node"
        ],
        "esModuleInterop": true
    }
}